# Gruvbox with a darker background for greater contrast

{
  name = "gruvbox-dark"; # Dark, Medium
  author = "Dawid Kurek (dawikur@gmail.com), morhetz (https://github.com/morhetz/gruvbox), ElRastaOk (https://www.reddit.com/user/ElRastaOk)";
  dark = {
    base00 = "#1D2122"; # Default Background
    base01 = "#3c3836"; # Lighter Background (status bars, line numbers)
    base02 = "#504945"; # Selection Background
    base03 = "#665c54"; # Comments, Invisibles, Line Highlighting
    base04 = "#bdae93"; # Dark Foreground (status bars)
    base05 = "#d5c4a1"; # Default Foreground, Caret, Delimiters, Operators
    base06 = "#ebdbb2"; # Light Foreground
    base07 = "#fbf1c7"; # Light Background
    base08 = "#fb4934"; # Variables, XML Tags, Markup Links, Diff Deleted
    base09 = "#fe8019"; # Integers, Boolean, Constants, XML Attributes
    base0A = "#fabd2f"; # Classes, Markup Bold, Search Background
    base0B = "#b8bb26"; # Strings, Inherited Class, Markup Code, Diff Inserted
    base0C = "#8ec07c"; # Support, Regex, Escape Chars, Markup Quotes
    base0D = "#83a598"; # Functions, Methods, Attribute IDs, Headings
    base0E = "#d3869b"; # Keywords, Storage, Selector, Markup Italic, Diff Changed
    base0F = "#d65d0e"; # Deprecated, Embedded Language Tags
    batTheme = "gruvbox-dark";
  };
  light = {
    base00 = "#fbf1c7"; # Default Background
    base01 = "#ebdbb2"; # Lighter Background (status bars, line numbers)
