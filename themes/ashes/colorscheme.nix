# Ashes color scheme
# Base16 colors from official Ashes scheme

{
  name = "ashes";
  author = "Glitchbone (adrien@glitchbone.com)";
  theme = {
    base00 = "#1C2023"; # Default Background
    base01 = "#2C3033"; # Lighter Background (status bars, line numbers)
    base02 = "#3C4043"; # Selection Background
    base03 = "#747C84"; # Comments, Invisibles, Line Highlighting
    base04 = "#747C84"; # Dark Foreground (status bars)
    base05 = "#C7CCD1"; # Default Foreground, Caret, Delimiters, Operators
    base06 = "#C7CCD1"; # Light Foreground
    base07 = "#F3F4F5"; # Light Background
    base08 = "#C7AE95"; # Variables, XML Tags, Markup Links, Diff Deleted
    base09 = "#C7AE95"; # Integers, Boolean, Constants, XML Attributes
    base0A = "#AEC795"; # Classes, Markup Bold, Search Background
    base0B = "#95C7AE"; # Strings, Inherited Class, Markup Code, Diff Inserted
    base0C = "#95AEC7"; # Support, Regex, Escape Chars, Markup Quotes
    base0D = "#AE95C7"; # Functions, Methods, Attribute IDs, Headings
    base0E = "#C795AE"; # Keywords, Storage, Selector, Markup Italic, Diff Changed
    base0F = "#747C84"; # Deprecated, Embedded Language Tags
    batTheme = "default"; # bat doesn't have an ashes theme, using default
  };
}
